<!DOCTYPE html>
<html>
  <head>
    <title>Minicon</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="page-header">
      <div class="container">
        <div class="row">
          <div class="twelve columns">
            <%= link_to root_path do %>
              <%= image_tag 'minicon_logo_56.png', id: 'minicon-logo' %>
            <% end %>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <% flash.each do |type, message| %>
            <%= content_tag :div, message, class: "message message-#{type}" %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
  <footer id="page-footer">
    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <%= image_tag 'minicon_icon_96.png', id: 'minicon-icon' %>
          Copyright (c) minicon All Rights Reserved.
        </div>
      </div>
    </div>
  </footer>
</html>
