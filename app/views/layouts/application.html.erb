<!DOCTYPE html>
<html>
  <head>
    <title>Minicon</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="page-header">
      <div class="container">
        <div class="row">
          <div class="four columns">
            <%= link_to root_path do %>
              <%= image_tag 'minicon_logo_56.png', id: 'minicon-logo' %>
            <% end %>
          </div>
          <div id="header-links" class="eight columns">
            <div class="header-link">
              <%= link_to root_path do %>
                <i class="fas fa-home fa-2x header-link-icon"></i>
                <span class="header-link-text">Home</span>
              <% end %>
            </div>
            <% if user_signed_in? %>
              <div class="header-link">
                <%= link_to purchases_path do %>
                  <i class="fas fa-history fa-2x header-link-icon"></i>
                  <span class="header-link-text">Purchases</span>
                <% end %>
              </div>
              <div class="header-link">
                <%= link_to edit_user_registration_path do %>
                  <i class="fas fa-user fa-2x header-link-icon"></i>
                  <span class="header-link-text">Profile</span>
                <% end %>
              </div>
              <div class="header-link">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt fa-2x header-link-icon"></i>
                  <span class="header-link-text">Log Out</span>
                <% end %>
              </div>
            <% else %>
              <div class="header-link">
                <%= link_to new_user_registration_path do %>
                  <i class="fas fa-user-plus fa-2x header-link-icon"></i>
                  <span class="header-link-text">Sign Up</span>
                <% end %>
              </div>
              <div class="header-link">
                <%= link_to new_user_session_path do %>
                  <i class="fas fa-sign-in-alt fa-2x header-link-icon"></i>
                  <span class="header-link-text">Log In</span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <% flash.each do |type, message| %>
            <%= content_tag :div, message, class: "message message-#{type}" %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
  <footer id="page-footer">
    <div class="container">
      <div class="row">
        <div class="twelve columns">
          <%= image_tag 'minicon_icon_96.png', id: 'minicon-icon' %>
          Copyright (c) minicon All Rights Reserved.
        </div>
      </div>
    </div>
  </footer>
</html>
